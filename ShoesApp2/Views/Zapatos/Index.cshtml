@model IEnumerable<ShoesApp2.Models.FASV1_GetAllProducts_Result>

@{
    /**/

    ViewBag.Title = "Lista de Zapatos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tabla de Zapatos (ShoesApp)</h2>
@using (Html.BeginForm("Index", "", FormMethod.Get))
{

<form class="form-inline my-2 my-lg-0">
    ID @Html.TextBox("searching", null, new { @class = "form-control mr-sm-1", @autofocus = "autofocus" })
    Nombre @Html.TextBox("Bnombre", null, new { @class = "form-control mr-sm-2" })
    <button class="btn btn-secondary my-2 my-sm-0" type="submit">Buscar</button>
</form>

    @*<form class="form-inline my-2 my-lg-0">
        @Html.TextBox("Bnombre", "Nombre", new { @class = "form-control mr-sm-2" })
        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Buscar</button>
    </form>*@
}

<p>
    @Html.ActionLink("Create Nuevo Zapato", "Agregar")

</p>



<table class="table tabl">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdColor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdBrand)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdProvider)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdCatalog)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Observations)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PriceDistributor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PriceClient)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PriceMember)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsEnabled)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Keywords)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateUpdate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdType)
            </td>
            <td>
                @ShoesApp2.Controllers.ZapatosController.NombreColor(item.IdColor.Value)
                @*@Html.DisplayFor(modelItem => item.IdColor)*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdBrand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdProvider)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCatalog)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Observations)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriceDistributor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriceClient)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriceMember)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsEnabled)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Keywords)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateUpdate)
            </td>
            <td>
                @Html.ActionLink("Editar", "Editar", new { id = item.Id }) |
                @Html.ActionLink("Imagen", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "aElimina" })
            </td>
        </tr>
    }
</table>
@section scripts{
    <script>
        $(".aElimina").click(function (event) {
            if (!confirm('Estas seguro de eliminarlo? (Eliminado Logico)')) {
                event.preventDefault();
            }
        });

        $(function () {
            $("#")
        })
    </script>
}